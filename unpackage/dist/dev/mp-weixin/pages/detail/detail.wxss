page {
  width: 100%;
  height: 100vh;
  background-color: #272725;
  color: #DFD8CA;
}
page .content .tags {
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
page .content .tags .tag {
      border: 1px solid #AFE1E2;
      color: #AFE1E2;
      border-radius: 30rpx;
      font-size: 20rpx;
      padding: 10rpx 20rpx;
      width: auto;
      display: inline-block !important;
      margin-right: 6rpx;
      margin-left: 6rpx;
      margin-bottom: 20rpx;
}
page .content .title {
    margin-top: 20rpx;
    margin-left: 40rpx;
    line-height: 1.1;
    font-size: 40rpx;
    font-weight: 700;
    color: #e2dfdf;
    letter-spacing: 3rpx;
}
page .content .sub-title {
    margin-top: 15rpx;
    margin-left: 40rpx;
    font-size: 30rpx;
    line-height: 1.2;
    color: #e2dfdf;
    letter-spacing: 3rpx;
}
page .content .info {
    margin-top: 15rpx;
    font-family: Lora, 'Times New Roman', serif;
    margin-left: 40rpx;
    font-style: italic;
    font-weight: 200;
    font-size: 25rpx;
    color: #e2dfdf;
}
page .content .text-content {
    font-size: 30rpx;
    margin-top: 30rpx;
    margin-left: 40rpx;
    line-height: 50rpx;
}
page .content .footer {
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-top: 80rpx;
}
page .content .footer .left {
      border: 0.8px solid #4E4C48;
      float: left;
      width: 280rpx;
      height: 120rpx;
      padding: 20rpx;
      text-align: center;
      overflow: hidden;
}
page .content .footer .left .previous {
        color: #e2dfdf;
        letter-spacing: 3rpx;
        font-size: 35rpx;
}
page .content .footer .left .previous-title {
        font-size: 25rpx;
}
page .content .footer .right {
      border: 0.8px solid #4E4C48;
      float: right;
      width: 280rpx;
      height: 120rpx;
      padding: 20rpx;
      text-align: center;
      overflow: hidden;
}
page .content .footer .right .next {
        color: #e2dfdf;
        letter-spacing: 3rpx;
        font-size: 35rpx;
}
page .content .footer .right .next-title {
        font-size: 25rpx;
}

