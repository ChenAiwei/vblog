page {
  width: 100%;
  height: 100vh;
  background-color: #272725;
  color: #DFD8CA;
}
.content {
  margin: 20rpx 15rpx 20rpx 15rpx;
}
.content text {
    font-size: 30rpx;
    font-weight: bold;
    color: #e5e5e8;
}
.content .tags {
    margin-top: 20rpx;
}
.content .tags .tag {
      border: 1px solid #4E4C48;
      border-radius: 30rpx;
      font-size: 24rpx;
      padding: 10rpx 20rpx;
      width: auto;
      display: inline-block !important;
      margin-right: 6rpx;
      margin-left: 6rpx;
      margin-bottom: 20rpx;
}
.content .item-list {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}
.content .item-list .item {
      margin-top: 50rpx;
}
.content .item-list .item .item-year text {
        color: #AFE1E2;
        font-size: 35rpx;
        font-family: -apple-system,BlinkMacSystemFont,"Helvetica Neue",Arial,"PingFang SC","Hiragino Sans GB",STHeiti,"Microsoft YaHei","Microsoft JhengHei","Source Han Sans SC","Noto Sans CJK SC","Source Han Sans CN","Noto Sans SC","Source Han Sans TC","Noto Sans CJK TC","WenQuanYi Micro Hei",SimSun,sans-serif;
        font-weight: 200;
}
.content .item-list .item .item-detail {
        margin-top: 30rpx;
}
.content .item-list .item .item-detail .title {
          font-size: 32rpx;
          font-weight: 500;
          margin-top: 25rpx;
}
.content .item-list .item .item-detail .sub-title {
          line-height: 1.3;
          margin: 0;
          font-size: 25rpx;
          font-weight: 300;
          margin-bottom: 25rpx;
          margin-top: 10rpx;
}
.content .item-list .item .item-detail .split {
          background: #44423F;
          height: 0.8px;
          margin-top: 30rpx;
}
.content .footer {
    margin-top: 50rpx;
    margin-bottom: 50rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    font-size: 30rpx;
    font-weight: 200;
}

